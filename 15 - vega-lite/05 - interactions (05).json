{
    "repeat": {
        "row": [
            "Horsepower",
            "Acceleration"
        ],
        "column": [
            "Acceleration",
            "Horsepower"
        ]
    },
    "spec": {
        "data": {
            "url": "05 - data.json"
        },
        "mark": "point",
        "params": [
            {
                "name": "brush",
                "select": {
                    "type": "interval",
                    "resolve": "intersect",
                    "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!"
                }
            },
            {
                "name": "grid",
                "select": {
                    "type": "interval",
                    "resolve": "global",
                    "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
                    "zoom": "wheel![!event.shiftKey]"
                },
                "bind": "scales"
            }
        ],
        "encoding": {
            "x": {
                "field": {
                    "repeat": "column"
                },
                "type": "quantitative"
            },
            "y": {
                "field": {
                    "repeat": "row"
                },
                "type": "quantitative",
                "axis": {
                    "minExtent": 30
                }
            },
            "color": {
                "condition": {
                    "param": "brush",
                    "field": "Origin",
                    "type": "nominal"
                },
                "value": "grey"
            }
        }
    }
}